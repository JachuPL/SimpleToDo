@model TaskDetailsViewModel

<h2>@Model.Title</h2>

<div>
    <div class="row">
        <div class="col-md-2">
            <input type="checkbox" disabled asp-for="Finished" data-toggle="toggle" value="@Model.Finished" data-on="Ukończone" data-off="Nieukończone" data-onstyle="success" data-offstyle="primary" />
        </div>
        <div class="col-md-2">
            @Html.DisplayFor(model => model.DueDate)
        </div>
        <div class="col-md-2">
            @Html.DisplayFor(model => model.Priority)
        </div>
    </div>
    <p>
        @Html.DisplayFor(model => model.Description)
    </p>
    <div>
        <a asp-action="Index" class="btn btn-light mr-2">Powrót do listy zadań</a>
        @Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }, new { @class = "btn btn-light mr-2" })
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteTaskModal">Usuń</button>
    </div>
</div>
<div class="modal fade" id="deleteTaskModal" tabindex="-1" role="dialog" aria-labelledby="deleteTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteTaskModalLabel">Czy na pewno chcesz usunąć zadanie '@Model.Title'?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Wybrano opcję, która prowadzi do nieodwracalnej operacji usunięcia zadania '@Model.Title'. Po usunięciu zadania jego przywrócenie będzie niemożliwe. Czy chcesz kontynuować?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                <form method="post" asp-action="Delete">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger" data-toggle="modal" data-target="deleteTaskModal">Usuń</button>
                </form>
            </div>
        </div>
    </div>
</div>