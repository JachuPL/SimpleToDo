@model TaskDetailsViewModel

<h2>Szczegóły zadania '@Model.Title'</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Finished)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Finished)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>
    </dl>
</div>
<div>
    <form method="post" asp-action="Delete">
        <a asp-action="Index" class="btn btn-light mr-2">Powrót do listy zadań</a>
        @Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }, new { @class = "btn btn-light mr-2" })

        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
    </form>
</div>