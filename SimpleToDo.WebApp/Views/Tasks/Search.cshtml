@using SimpleToDo.WebApp.Controllers
@using X.PagedList
@using TaskStatus = SimpleToDo.Models.Domain.TaskStatus
@model SearchResultsViewModel

@await Html.PartialAsync("SearchBox", new SearchCriteriaViewModel())

@if (Model.Results.Any())
{
    <h4>Wyniki wyszukiwania dla frazy '@Model.Phrase'</h4>
    <br />
    @await Html.PartialAsync("TaskIndexTable", Model.Results)
}
else
{
    <p>Wpisz szukaną frazę w pole tekstowe i następnie kliknij lupę, by wyszukać ją w tytułach i opisach zadań.</p>
}