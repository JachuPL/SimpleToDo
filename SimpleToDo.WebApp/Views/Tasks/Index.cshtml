@using SimpleToDo.WebApp.Controllers
@model List<TaskIndexViewModel>

<div class="pad-bottom">
    <a asp-action="Create" class="btn btn-success">
        <span class="fa fa-calendar-plus"></span>&nbsp;Nowe zadanie
    </a>
</div>

<table class="table">
    <thead class="thead-default">
        <tr>
            <th class="text-center">Tytuł</th>
            <th class="text-center">Status</th>
            <th class="text-center">Przewidywana data zakończenia</th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (TaskIndexViewModel task in Model)
        {
            <tr>
                <td class="text-center">@task.Title</td>
                <td class="text-center">
                    <input type="checkbox" disabled data-toggle="toggle" value="@task.Finished" data-on="Ukończone" data-off="Nieukończone" data-onstyle="success" />
                </td>
                <td class="text-center">@task.DueDate</td>
                <td class="text-center">
                    <a href="@Url.Action(nameof(TasksController.Details), "Tasks", new { id = task.Id })" class="btn btn-light">
                        <span class="fa fa-info"></span>&nbsp;Szczegóły
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>