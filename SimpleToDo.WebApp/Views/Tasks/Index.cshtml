@using SimpleToDo.WebApp.Controllers
@model List<TaskIndexViewModel>

<table class="table">
    <thead class="thead-default">
        <tr>
            <th>Tytuł</th>
            <th>Status</th>
            <th>Przewidywana data zakończenia</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (TaskIndexViewModel task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Finished</td>
                <td>@task.DueDate</td>
                <td>@Html.ActionLink("Szczegóły", nameof(TasksController.Details), new { id = task.Id }, new { @class = "btn btn-primary" })</td>
            </tr>
        }
    </tbody>
</table>